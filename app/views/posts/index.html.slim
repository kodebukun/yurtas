.my-4
  h2.text-primary
    = "全体の掲示板"

  .d-flex.justify-content-end
    = link_to "新規投稿", new_post_path, class: "btn btn-primary mr-3"
  /--posts--
  div
    ul.list-group.list-group-flush
      - @posts.each do |post|
        li.list-group-item
          - if post.unreads.find_by(user_id: @current_user.id)
            span.badge.badge-danger.mb-2 New
          h6.mb-1= link_to post.user.name, post.user, class: "text-secondary"
          h5= link_to simple_format(post.title), post, class: "text-primary"

    .mt-4
      = paginate @posts
      = page_entries_info @posts
