    .card-deck= render partial: "help_user"

  #index.tab-pane.fade aria-labelledby="index-tab" role="tabpanel"
    .card-deck= render partial: "help_index"

  #attendance.tab-pane.fade aria-labelledby="attendance-tab" role="tabpanel"
    .card-deck= render partial: "help_attendance"

  #post.tab-pane.fade aria-labelledby="post-tab" role="tabpanel"
    .card-deck= render partial: "help_post"

  #file.tab-pane.fade aria-labelledby="file-tab" role="tabpanel"
    .card-deck= render partial: "help_file"

  #material.tab-pane.fade aria-labelledby="material-tab" role="tabpanel"
    .card-deck= render partial: "help_material"
