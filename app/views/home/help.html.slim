ul#materialsTab.nav.nav-pills.my-3 role="tablist"
  li.nav-item
    a#header-tab.nav-link.active aria-controls="header" aria-selected="true" data-toggle="pill" href="#header" role="tab" ヘッダー
  li.nav-item
    a#user-tab.nav-link aria-controls="user" aria-selected="false" data-toggle="pill" href="#user" role="tab" ユーザー
  li.nav-item
    a#index-tab.nav-link aria-controls="index" aria-selected="false" data-toggle="pill" href="#index" role="tab" ホーム
  li.nav-item
    a#attendance-tab.nav-link aria-controls="attendance" aria-selected="false" data-toggle="pill" href="#attendance" role="tab" 勤務情報
  li.nav-item
    a#post-tab.nav-link aria-controls="post" aria-selected="false" data-toggle="pill" href="#post" role="tab" 掲示板
  li.nav-item
