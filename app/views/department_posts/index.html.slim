.my-4
  h2.text-primary
    = "#{@department.name}の掲示板"

  .d-flex.justify-content-end
    = link_to "新規投稿", new_department_post_path(department_id: @department.id), class: "btn btn-primary mr-3"
  /--posts--
  div
    ul.list-group.list-group-flush
      - @posts.each do |post|
        li.list-group-item
          h6.mb-3= link_to post.user.name, post.user, class: "text-secondary"
          h5= link_to simple_format(post.title), post

    .mt-4
      = paginate @posts
      = page_entries_info @posts
